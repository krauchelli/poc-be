generator client {
  provider             = "prisma-client-py"
  interface            = "sync"
  recursive_type_depth = 5
}

datasource db {
  provider = "postgresql"
  url      = env("DEVELOPMENT_DATABASE_URL")
}

model User {
  id          String   @id @default(uuid())
  email       String   @unique //ganti jadi username atau digabung dengan username
  username    String   @unique
  phoneNumber String?  @unique
  password    String
  status      Status   @default(ACTIVE)
  role        Role     @default(USER)
  tokens      TokenBlacklist[]  // one-to-many relationship
  createdAt   DateTime @default(now())
  createdBy   String?
  updatedAt   DateTime? @updatedAt
  updatedBy   String?
  deletedAt   DateTime?
  deletedBy   String?
}

model TokenBlacklist {
  id        String   @id @default(uuid())
  jti       String   @unique  // JWT ID (unique identifier of the token)
  userId    String   // Foreign key for the User model
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
} 

// enum for user role
enum Role {
  USER
  ADMIN
}

// enum for user status
enum Status {
  ACTIVE
  INACTIVE
  DELETED
}
